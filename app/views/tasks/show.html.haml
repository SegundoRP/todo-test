%p#notice= notice

%p
  %b Name:
  = @task.name
%p
  %b Description:
  = @task.description
%p
  %b Due date:
  = @task.due_date
%p
  %b Category:
  = @task.category

.notes-container
  .notes
    - @task.notes.each do |note|
      %p= note.body
      %p= time_ago_in_words note.created_at
      %p= note.user.email
      %hr
  = simple_form_for Note.new, url: task_notes_path(task_id: @task.id) do |f|
    = f.input :body, label: false, as: :string, placeholder: 'Digite su nota', input_html: { autocomplete: :off}

= link_to 'Edit', edit_task_path(@task)
\|
= link_to 'Back', tasks_path
